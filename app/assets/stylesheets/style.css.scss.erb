@charset "utf-8";
/* CSS Document */
* {
  margin:0;
  padding:0;
}
body {
  font-family:"微软雅黑", Arial, Helvetica, sans-serif;
  font-size:12px;
  color:#787878;
  background:url(bg.jpg);
}
a {
  font-size:12px;
  color:#666;
  text-decoration:none;
}
a:hover{
  color:#ff6699;
}
ul {
  list-style:none;
}
img {
  border:none;
}
.clear {
  height:1px;
  clear:both;
  margin-bottom:-1px;
  overflow:hidden;
}
/*头部*/

#apDiv1 {
  position:absolute;
  width:2500px;
  height:1200px;
  z-index:100;
  clear: both;
  background-color: #EEE;
  overflow: hidden;
  visibility: hidden;
}

#top {
  height:50px;
  background:url(top_bg.jpg) repeat-x;
}
#head {
  width:976px;
  height:50px;
  position:relative;
  margin:0 auto;
}
#head #logo {
  position:absolute;
  top:0;
  left:6px;
}
#head #search {
  position:absolute;
  top:4px;
  right:19px;
  width:222px;
  height:31px;
  background:url(search_bg.jpg) no-repeat;
}
#head #search .input {
  position:absolute;
  top:3px;
  left:8px;
  width:150px;
  height:20px;
  line-height:20px;
  background:#fbfbfb;
  border:1px solid #fff;
}
#head #search .ico {
  position:absolute;
  top:1px;
  right:0;
}

/*主体*/

.container{
  width:970px;
  margin:0 auto;
}

.top_sum {
  width:960px;
  margin:0 auto;
}
.top_sum dt {
  width:95px;
  height:95px;
  line-height:95px;
  background:url(ico1.jpg) no-repeat;
  float:left;
  text-align:center;
}
.top_sum dt a {
  width:95px;
  height:95px;
  display:block;
  font-size:26px;
  color:#646464;
}
.top_sum dt a:hover {
  color:#fff;
  background:url(ico1_a.jpg) no-repeat;
}
.top_sum dt.dt2{
  color:#fff;
  background:url(ico1_a.jpg) no-repeat;
}
.top_sum dt.dt2 a{
  color:#fff;
}
.top_sum dd {
  width:861px;
  float:right;
}
.top_sum li{
  width:123px;
  height:52px;
  line-height:45px;
  background:url(ico2.jpg) no-repeat right top;
  float:left;
}
.top_sum li a{
  width:113px;
  height:52px;
  text-align:center;
  display:block;
  font-size:18px;
  color:#646464;
  padding-left:10px;
}
.top_sum li a:hover{
  background:url(ico2_a.jpg) no-repeat right top;
  color:#fff;
}
.top_sum li.li2 a{
  background:url(ico2_a.jpg) no-repeat right top;
  color:#fff;
}
.sum2{
  width:976px;
  margin:0 auto;
  padding-top:13px;
}
.sum2 dl{
  width:244px;
  height:197px;
  background:url(bg2.jpg) no-repeat center top;
  float:left;
  margin-bottom:12px;
}
.sum2 dt{
  height:33px;
  line-height:33px;
  text-indent:16px;
  font-size:14px;
}
.sum2 dt a{
  font-size:14px;
}
.sum2 dd{
  width:211px;
  height:138px;
  position:relative;
  margin:0 auto;
  cursor:pointer;
}
.sum2 dd a{
  width:211px;
  height:138px;
  display:block;
}
.sum2 dd .pic1{
  position:absolute;
  top:0;
  left:0;
  width:141px;
  height:137px;
  overflow:hidden;
}
.sum2 dd .pic2{
  position:absolute;
  top:0;
  right:0;
  width:66px;
  height:66px;
  overflow:hidden;
}
.sum2 dd .pic3{
  position:absolute;
  top:71px;
  right:0;
  width:66px;
  height:66px;
  overflow:hidden;
}
.fenye{
  height:20px;
  width:80px;
  margin:0 auto;
  padding:12px 0 80px 0;
}
.fenye li{
  width:22px;
  height:20px;
  line-height:20px;
  margin-right:4px;
  background:url(ico5.jpg) no-repeat;
  float:left;
  text-align:center;
}
.fenye li a{
  width:22px;
  height:20px;
  display:block;  
}
.fenye li.li2 a{
  background:url(ico4.jpg) no-repeat;
  color:#fff;
}
.fenye li a:hover{
  background:url(ico4.jpg) no-repeat;
  color:#fff;
}
/*底部*/
#foot {
  position:relative;
  height:131px;
  background:#fff;
}
#foot .footsum{
  width:960px;
  height:116px;
  position:relative;
  padding-top:15px;
  margin:0 auto;
}
#foot .footsum .f_logo{
  position:absolute;
  top:16px;
  right:4px;
}
#foot .footsum p{
  height:19px;
  line-height:19px;
}
#foot .footsum .p2{
  height:46px;
  line-height:46px;
}
#foot .footsum p a{
  padding-right:25px;
}
